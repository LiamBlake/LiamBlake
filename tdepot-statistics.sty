% Dependencies

% probability

% Statistical operators
\newcommand{\var}[1]{\operatorname{var} \left(#1\right)}
\newcommand{\avg}[1]{\mathbb{E}\left[#1\right]}
\newcommand{\cov}[1]{\operatorname{cov} \left(#1\right)}
\newcommand{\sd}[1]{\operatorname{sd} \left(#1\right)}
\newcommand{\cor}[1]{\operatorname{cor} \left(#1\right)}
\newcommand{\mse}[2]{\operatorname{MSE}_{\,#1} \left(#2\right)}



% Hypothesis tests
\newcommand{\hypothesis}[2]{
	\begin{align*}
		& H_0: \qquad #1,\\
		& H_a: \qquad #2,
	\end{align*}
}

\newcommand{\hypothesisd}[2]{
	\begin{align*}
		& H_0: \qquad #1,\\
		& H_a: \qquad #2.
	\end{align*}
}


% Distributions
\newcommand{\isDist}[2]{\sim #1\left(#2\right)}
\newcommand{\isNorm}[1]{\isDist{\mathrm{N}}{#1}}
\newcommand{\isBin}[1]{\isDist{\mathrm{Bin}}{#1}}
\newcommand{\isGeom}[1]{\isDist{\mathrm{Geom}}{#1}}
\newcommand{\isBern}[1]{\isDist{\mathrm{Bern}}{#1}}

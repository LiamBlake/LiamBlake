[core]
	editor = nvim
	autocrlf = input

[mergetool "nvim"]
	cmd = nvim -f -c \"Git mergetool\" \"$MERGED\"

[merge]
	tool = nvim

[mergetool]
	prompt = false

[pull]
	rebase = true

[alias]
	st = "status -s -b"
	co = "checkout"
	cb = "checkout -b"
	col = "checkout -"
	cm = "commit -m"
	cam = "commit -a -m"
	sc = "switch -c"
	cp = "cherry-pick"
	f = "fetch"
	pl = "log --graph --oneline --decorate"
	fs = "!git fetch && git status"
	ul = "reset HEAD~"
	stashall = "stash save --include-untracked"
	update-url = "remote set-url origin"
	sync = "!git pull && git push"

	# Stash operations
	sl = "stash list"
	ss = "stash save"
	sp = "stash pop"
	sa = "stash apply"

	# When rebasing
	rc = "rebase --continue"
	ra = "rebase --abort"
	rs = "rebase --skip"


global !p
def math():
	return vim.eval('vimtex#syntax#in_mathzone()') == '1'

endglobal

snippet article "Document class" b
\documentclass[12pt]{article}

\usepackage{amsmath}
\usepackage{lb_base}

\title{$2}
\author{${3:Liam Blake}}

\begin{document}
\maketitle

$0
\end{document}
endsnippet

context "math()"
snippet bm "Bold math" i
\bm{$1}
endsnippet

context "not math()"
snippet bf "Bold text" i
\textbf{$1}
endsnippet

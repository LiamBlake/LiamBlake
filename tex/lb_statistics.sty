% Dependencies

% Statistical operators
\newcommand{\var}[1]{\operatorname{var} \left(#1\right)}
\newcommand{\avg}[1]{\mathbb{E}\left[#1\right]}
\newcommand{\cov}[1]{\operatorname{cov} \left(#1\right)}
\newcommand{\sd}[1]{\operatorname{sd} \left(#1\right)}
\newcommand{\cor}[1]{\operatorname{cor} \left(#1\right)}
\newcommand{\mse}[2]{\operatorname{MSE}_{\,#1} \left(#2\right)}
\newcommand{\bias}[2]{b_{\,1#}\left(#1\right)}


% Distributions
\newcommand{\Dist}[2]{#1\left(#2\right)}

% Without \sim
\newcommand{\isGauss}[1]{\Dist{\mathrm{N}}{#1}}
\newcommand{\isBin}[1]{\Dist{\mathrm{Bin}}{#1}}
\newcommand{\isGeom}[1]{\Dist{\mathrm{Geom}}{#1}}
\newcommand{\isBern}[1]{\Dist{\mathrm{Bern}}{#1}}
\newcommand{\isExp}[1]{\Dist{\mathrm{Exp}}{#1}}
\newcommand{\isPois}[1]{\Dist{\mathrm{Po}}{#1}}
\newcommand{\isHypGeo}[1]{\Dist{\mathrm{Hypergeometric}}{#1}}
\newcommand{\isUniform}[1]{\Dist{\mathrm{U}}{#1}}

